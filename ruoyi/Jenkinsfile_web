pipeline {
    agent any

    options {
        timeout(time: 10, unit: 'MINUTES')
        disableConcurrentBuilds()
        timestamps()
    }

    stages {
        stage('pull source code') {
            steps {
                echo "ğŸš€ å¼€å§‹æ‹‰å–æºç ..."
                git branch: 'master',
                    url: 'https://github.com/yangzongzhuan/RuoYi-Vue3.git'
            }
        }

        stage('fetch script') {
            steps {
                script {
                    echo "ğŸ“ ä¸‹è½½æ‰“åŒ…è„šæœ¬è„šæœ¬å’Œnginxé…ç½®..."
                    sh 'curl http://192.168.10.10:30180/zhongkunming/devshell/raw/branch/main/ruoyi/ruoyiweb.conf -o ruoyiweb.conf'
                    sh 'curl http://192.168.10.10:30180/zhongkunming/devshell/raw/branch/main/ruoyi/ruoyiweb.sh -o ruoyiweb.sh'
                }
            }
        }

        stage('build') {
            steps {
                script {
                    echo "ğŸ—ï¸ ä½¿ç”¨è„šæœ¬æ‰§è¡Œæ„å»º..."
                    sh '''
                        chmod +x ruoyiweb.sh
                        bash ruoyiweb.sh
                    '''
                }
            }
        }

        stage('deploy') {
            steps {
                script {
                    echo "ğŸ“¡ æ­£åœ¨éƒ¨ç½²åˆ°æœåŠ¡å™¨..."
                    sshPublisher(
                        publishers: [
                            sshPublisherDesc(
                                configName: 'deploy-ruoyiweb',
                                transfers: [
                                    sshTransfer(
                                        sourceFiles: 'dist.tar.gz',
                                        execCommand:
                                            '''
                                            rm -rf html
                                            mkdir -p html
                                            tar -xzf dist.tar.gz -C html
                                            '''
                                    ),
                                    sshTransfer(
                                        sourceFiles: 'ruoyiweb.conf',
                                        remoteDirectory: '/conf',
                                        execCommand:
                                            '''ngx-reload'''
                                    )
                                ],
                                verbose: true
                            )
                        ]
                    )
                }
            }
        }
    }

    post {
        always {
            cleanWs()
            echo "ğŸ§¹ æ¸…ç†å·¥ä½œåŒºå®Œæˆ"
        }
        success {
            echo "âœ… æ„å»ºä¸éƒ¨ç½²æˆåŠŸï¼"
        }
        failure {
            echo "âŒ æ„å»ºæˆ–éƒ¨ç½²å¤±è´¥ï¼Œè¯·æ£€æŸ¥æ—¥å¿—ã€‚"
        }
    }
}
