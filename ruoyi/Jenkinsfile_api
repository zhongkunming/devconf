pipeline {
    agent any

    options {
        timeout(time: 10, unit: 'MINUTES')
        disableConcurrentBuilds()
        timestamps()
    }

    tools {
        jdk 'jdk21'
        maven 'maven3.9'
    }

    stages {
        stage('pull source code') {
            steps {
                echo "ğŸš€ å¼€å§‹æ‹‰å–æºç ..."
                git branch: 'master',
                    url: 'https://github.com/yangzongzhuan/RuoYi-Vue-fast.git'
            }
        }

        stage('build jar') {
            steps {
                script {
                    echo "ğŸ“¦ å¼€å§‹æ„å»º Jar åŒ…..."
                    sh 'java -version'
                    sh 'mvn -v'
                    sh 'mvn help:system'
                    sh 'mvn -Dmaven.test.skip=true clean package'
                }
            }
        }

        stage('fetch script') {
            steps {
                script {
                    echo "ğŸ“ ä¸‹è½½å¯åŠ¨è„šæœ¬..."
                    sh 'curl http://192.168.10.10:30180/zhongkunming/devshell/raw/branch/main/ruoyi/ruoyictl.sh -o ruoyictl.sh'
                }
            }
        }

        stage('deploy') {
            steps {
                script {
                    echo "ğŸ“¡ æ­£åœ¨éƒ¨ç½²åˆ°æœåŠ¡å™¨..."
                    sshPublisher(
                        publishers: [
                            sshPublisherDesc(
                                configName: 'deploy-ruoyi',
                                transfers: [
                                    sshTransfer(
                                        sourceFiles: 'target/ruoyi.jar',
                                        removePrefix: 'target'
                                    ),
                                    sshTransfer(
                                        sourceFiles: 'ruoyictl.sh',
                                        remoteDirectory: '/sbin',
                                        execCommand:
                                            '''chmod +x ./sbin/ruoyictl.sh
                                            ./sbin/ruoyictl.sh start'''
                                    )
                                ],
                                verbose: true
                            )
                        ]
                    )
                }
            }
        }
    }

    post {
        always {
            cleanWs()
            echo "ğŸ§¹ æ¸…ç†å·¥ä½œåŒºå®Œæˆ"
        }
        success {
            echo "âœ… æ„å»ºä¸éƒ¨ç½²æˆåŠŸï¼"
        }
        failure {
            echo "âŒ æ„å»ºæˆ–éƒ¨ç½²å¤±è´¥ï¼Œè¯·æ£€æŸ¥æ—¥å¿—ã€‚"
        }
    }
}
